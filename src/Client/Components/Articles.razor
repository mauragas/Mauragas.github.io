@inherits ArticlesBase

<br/>
<div class="container">
    @for (int i = 0; i < @Files.Count; i=i+3)
    {
        var items = @Files.Skip(i).Take(3);
            <div class="card-deck">
                @foreach (var file in items)
                {
                    <Article FileInfo=@file/>
                }
            </div>
        <br/>
    }
</div>