@page "/linux"
@inject HttpClient Http
@inject IJSRuntime JSRuntime;

@if (MarkDownDocument == null)
{
    <p><em>Loading...</em></p>
}
else
{
    @((MarkupString)MarkDownDocument)
}

@code {
    private string MarkDownDocument;

    protected override async Task OnInitializedAsync()
    {
        await JSRuntime.InvokeVoidAsync("setTitle", "Linux");
        var markdownParser = new MarkdownParser(Http);
        MarkDownDocument = await markdownParser.ParseToHtmlAsync("/linux/linux.md");
        
    }
}